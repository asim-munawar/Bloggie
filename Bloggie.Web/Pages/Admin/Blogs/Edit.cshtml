@page "{Id:Guid}"
@model Bloggie.Web.Pages.Admin.Blogs.EditModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Edit Blog Post</h1>
    </div>
</div>

<div>
    <div class="container">
        <form method="post">

            <div class="mb-3">
                <label for="Id" class="form-label">Id</label>
                <input type="text" class="form-control" id="Id" asp-for="BlogPost.Id" readonly>
            </div>

            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading" asp-for="BlogPost.Heading">
            </div>

            <div class="mb-3">
                <label for="PageTitle" class="form-label">Page Title</label>
                <input type="text" class="form-control" id="PageTitle" asp-for="BlogPost.PageTitle">
            </div>

            <div class="mb-3">
                <label for="Content" class="form-label">Content</label>
                <textarea type="text" class="form-control" id="Content" asp-for="BlogPost.Content"></textarea>
            </div>

            <div class="mb-3">
                <label for="ShortDescription" class="form-label">Short Description</label>
                <input type="text" class="form-control" id="ShortDescription" asp-for="BlogPost.ShortDescription">
            </div>

            <div class="mb-3">
                <label for="FeaturedImageUrl" class="form-label">Featured Image Url</label>
                <input type="text" class="form-control" id="FeaturedImageUrl" asp-for="BlogPost.FeaturedImageUrl">
            </div>

            <div class="mb-3">
                <label for="ImageHandle" class="form-label">Image Handle</label>
                <input type="text" class="form-control" id="ImageHandle" asp-for="BlogPost.ImageHandle">
            </div>

            <div class="mb-3">
                <label for="Author" class="form-label">Author</label>
                <input type="text" class="form-control" id="Author" asp-for="BlogPost.Author">
            </div>

            <div class="mb-3">
                <label for="PublishedTime" class="form-label">Published Time</label>
                <input type="date" class="form-control" id="PublishedTime" asp-for="BlogPost.PublishedTime">
            </div>


            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Visible" asp-for="BlogPost.Visible">
                <label class="form-check-label" for="Visible">Is Visible</label>
            </div>
            <div class="mb-3 d-flex justify-content-lg-between">
                <button class="btn btn-primary" type="submit" asp-page-handler="Edit">Submit</button>
                <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
            </div>

        </form>
    </div>
</div>
